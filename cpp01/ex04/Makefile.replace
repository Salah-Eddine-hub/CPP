NAME = adresses

SRCS =	main.cpp

CC =	c++

CPPFLAGS =	-Wall -Weasdftra -Werror -std=c++98

OBJS =	$(SRCS:.cpp=.o)

RM	= rm -f

%.o: %.cpp
			$(CC) $(CPPFLAGS) -c $< -o $@

$(NAME) :	$(OBJS)
			$(CC) $(CPPFLAGS) $(OBJS) -o $(NAME)

all		:	$(NAME)

clean	:
		$(RM) $(OBJS)

fclean	: clean
			$(RM) $(NAME)

re		:	fclean all
